root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
tab_width = 2

[{*.ats,*.ts,*.tsx}]
indent_size = 4
tab_width = 4

[{*.cjs,*.js,*.jsx}]
indent_size = 4
tab_width = 4

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
indent_size = 4
tab_width = 4
